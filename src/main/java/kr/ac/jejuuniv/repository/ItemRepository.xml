<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.jejuuniv.repository.ItemRepository">
	<select id="findAll" resultType="Item" >
		select 
			itemName, price, provider
		from item
	</select>
	<insert id="insert" parameterType="Item">
		insert into item(itemName, price, provider) values (#{itemName}, #{price}, #{provider})
	</insert>
	<update id="update" parameterType="Item"> 
		update item set itemName=#{itemName}, price=#{price} where id = #{id}
	</update>
